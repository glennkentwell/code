#!/bin/bash

num=$2
if [ -z "$num" ]; then num=3; fi
ip="$1"
if [ -z "$ip" ]; then ip=103.1.185.193; fi

ping -c $num $ip | tail -n 1|  awk -F \/ -v ipvar="$ip" '{printf "%.2f Â± %.2fms to %s \n",$5,$7,ipvar;}'


